<h2 class="login-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <div class="login-form-group">
    <%= f.label :email, class: 'login-form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login-form-control' %>
  </div>

  <div class="login-form-group">
    <%= f.label :password, class: 'login-form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'login-form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="login-form-group remember-me">
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me, class: 'login-form-label' %>
    </div>
  <% end %>

  <div class="login-form-actions">
    <%= f.submit "Log in", class: 'login-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>